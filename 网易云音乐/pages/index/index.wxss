/* pages/index/index.wxss */
/*轮播图区域*/
.banner{
  width: 100%;
  height:300rpx
}
.banner image{
  width: 100%;
  height:100%
}

/*导航栏区域*/
.navConatiner{
  width:100%;
  display: flex;
  margin: 25rpx 0;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #d43c33;
  font-size:50rpx;
  line-height: 100rpx;
  text-align: center;
  color:#fff;
}
.navItem text{
  font-size: 25rpx;
}

/*歌曲推荐区域*/
.recommendContainer{
  padding:20rpx;
}
  /*推荐歌曲主体区域*/
.scrollItem {
  padding-top: 20rpx;
  padding-right: 20rpx;
  width: 200rpx;
}
.scrollItem text{
  /*单行文本溢出*/
  /*font-size:26rpx;*/
  /*white-space: nowrap;*/
  /*display: block;*/
  /*overflow: hidden;*/
  /*text-overflow:ellipsis;*/

  /*多行文本溢出*/
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;/*设置纵向对齐*/
  -webkit-line-clamp:2;/*设置行数*/
  overflow: hidden;
  text-overflow: ellipsis;
}
.scrollImage{
  width: 200rpx;
  height: 200rpx;
  border-radius:20rpx;
}
.scrollView{
  display: flex;
  height:300rpx;
}

/*排行榜区域*/
.rankList{
  padding:20rpx;
}
.rankListSwiperItem > .title{
  font-size:25rpx;
  line-height:80rpx;
}
.rankListSongItem{
  display: flex;
  margin-bottom: 20rpx;
}
.rankListSongItem > image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.rankListSongItem > .count{
  width: 100rpx;
  height:100rpx;
  text-align:center;
  line-height:100rpx;
}
.rankListSwiper {
  height:420rpx;
}
.rankListSongItem > .songName{
  height:100rpx;
  width: 400rpx;
  line-height:100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
